    ViewData["CurrentlySelectedLinkTitle"] = "Dashboard";
}

@section PageHeader {
    <div class="d-flex flex-row justify-content-between">
        <div class="">
            <h2 class="page-head-title">Dashboard</h2>
        </div>
    </div>
}

<div class="dashboard-container">
    <div class="row d-flex align-items-stretch">
        <div class="col-6 col-lg-7">
            <div id="dashboard_widget_assignedTasks" class="card card-table" data-row="0" data-col="0" data-sizeX="3" data-sizeY="2" data-maxSizeY="2" data-minSizeY="2" data-maxSizeX="3" data-minSizeX="3">
                <div class="card-header">
                    <div class="tools dropdown">
                        <span class="icon mdi mdi-download"></span>
                        <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                            <span class="icon mdi mdi-more-vert"></span>
                        </a>
                        <div class="dropdown-menu" role="menu" x-placement="top-start" style="left: 0px; position: absolute; top: 0px; transform: translate3d(20px, -166px, 0px); will-change: transform;">
                            <a class="dropdown-item" href="#">Action</a><a class="dropdown-item" href="#">Another action</a><a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div><a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </div>
                    <div class="title">Assigned Tasks</div>
                </div>
                <div class="card-body">
                    <input type="hidden" id="dashboard_widget_assignedTasks_out"/>
                    <div class="dd" id="dashboard_widget_assignedTasks_list">
                        <ol class="dd-list">
                            @foreach (var item in Model.AssignedTasks)
                            {
                                <li class="dd-item" data-id="@item.Id">
                                    <div class="dd-handle">
                                        <div class="e-icons e-rowcelldrag e-dtdiagonalright e-icon-rowdragicon"></div>
                                    </div>
                                    <div class="dd-content">
                                        <div class="row">
                                            <div class="col-9">
                                                <h4 class="mt-0">@item.Title</h4>
                                                <span>Status: @item.Status</span>
                                            </div>
                                            <div class="col">
                                                <span class="text-danger">@item.DaysOutMessage</span>
                                            </div>

                                        </div>
                                    </div>
                                </li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div id="dashboard_widget_recentActivity" class="widget be-loading" data-row="0" data-col="3" data-sizeX="2" data-sizeY="2">
                <div class="widget-header">
                    <div class="tools">
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <span class="icon mdi mdi-more-vert d-inline-block d-md-none"></span>
                            </a>
                            <div class="dropdown-menu" role="menu">
                                <a class="dropdown-item" href="#">Week</a><a class="dropdown-item" href="#">Month</a><a class="dropdown-item" href="#">Year</a>
                                <div class="dropdown-divider"></div><a class="dropdown-item" href="#">Today</a>
                            </div>
                        </div><span class="icon mdi mdi-chevron-down"></span><span class="icon toggle-loading mdi mdi-refresh-sync"></span><span class="icon mdi mdi-close"></span>
                    </div>
                    <div class="title">Recent Activity</div>
                </div>
                <div class="widget-body">
                    <ul class="user-timeline user-timeline-compact">
                        <li class="latest">
                            <div class="user-timeline-title">Initial Travel Request</div>
