                                <e-linestyle width="0"></e-linestyle>
                                <e-majorticklines width="0"></e-majorticklines>
                            </e-chart-primaryyaxis>
                            <e-chart-chartarea>
                                <e-chartarea-border width="0"></e-chartarea-border>

                            </e-chart-chartarea>
                            <e-series-collection>
                                <e-series dataSource="Model.DemoChartData" name="AbbVie" xName="xValue" opacity="0.75" width="2" yName="yValue" type="@ChartSeriesType.SplineArea">
                                    <e-series-marker visible="true" height="10" width="10"></e-series-marker>
                                </e-series>
                                <e-series dataSource="Model.DemoChartData" name="Exact Sciences" xName="xValue" opacity="0.75" width="2" yName="yValue1" type="@ChartSeriesType.SplineArea">
