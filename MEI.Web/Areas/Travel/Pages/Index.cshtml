@section ScriptSection {
    <script src="~/lib/jquery-nestable/jquery.nestable.js" type="text/javascript"></script>
    <script id="columnTemplate" type="text/x-template">
        <div class="image">
            <img src="@Url.Content("~/scripts/Images/Employees/${EmployeeID}.png")" alt="${EmployeeID}" />
        </div>
    </script>

    <script id="dashboard_widget_assignedTasks_grid_columnTemplate1" type="text/x-template">
        <div class="p-2">
            <span>${ConsultantName} - ${LocationName} - ${ProgramGuid}</span><br />
            Status: <span>${Status}</span>
        </div>
    </script>

    <script>
        $(document).ready(function() {
            $('#dashboard_widget_assignedTasks_list').nestable({
                'maxDepth': 1
            });

            //Watch for list changes and show serialized output
            function update_out(selector, sel2) {
                const out = $(selector).nestable('serialize');
                $(sel2).val(window.JSON.stringify(out));
            }

            update_out('#dashboard_widget_assignedTasks_list', "#dashboard_widget_assignedTasks_out");


            $('#dashboard_widget_assignedTasks_list').on('change',
                function() {
                    update_out('#dashboard_widget_assignedTasks_list', "#dashboard_widget_assignedTasks_out");
                });

        });
    </script>
